<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/registrationViewContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/naya_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/reg_link_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginRight="20.0dip"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linkedin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10.0dip"
                    android:background="#ff0177b5"
                    android:orientation="horizontal"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="30.0dip"
                    android:weightSum="1.0">

                    <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:paddingRight="10.0dip"
                        android:src="@drawable/ic_linkedin_white" />

                    <TextView
                        android:layout_width="1.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:layout_weight="0.0"
                        android:background="#ff3caae1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.7"
                        android:paddingBottom="10.0dip"
                        android:paddingLeft="20.0dip"
                        android:paddingTop="10.0dip"
                        android:text="Register with Linkedin   "
                        android:textColor="#ffffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5.0dip"
                    android:weightSum="1.0">

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="1.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.45"
                        android:background="#ffd3d3d3"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:gravity="center_horizontal"
                        android:text="or"
                        android:textColor="#ff757575" />

                    <TextView
                        android:layout_width="0.0dip"
                        android:layout_height="1.0dip"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.45"
                        android:background="#ffd3d3d3"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/purana_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:text="Create account"
                android:textColor="#ff5c6bc0"
                android:textSize="@dimen/eighteen_sp" />
            <android.support.design.widget.TextInputLayout

                android:id="@+id/input_layout_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dip"
                android:textColorHint="@color/lableColor"
                >

<EditText
    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dip"
                    android:gravity="center_vertical"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:lines="1"
                    android:paddingBottom="@dimen/ten_dip"
                    android:paddingTop="2.0dip"
                    android:textColor="#ff757575"
                    android:textSize="@dimen/fourteen_sp"
                     />
                
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dip"
                android:textColorHint="@color/lableColor"
                >

                <EditText
                    android:id="@+id/email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:gravity="center|left"
                    android:hint="email"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingBottom="@dimen/ten_dip"
                    android:paddingTop="2.0dip"
                    android:textColor="#ff757575"
                    android:textSize="@dimen/fourteen_sp"
                   />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:textColorHint="@color/lableColor"
                    >

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dip"
                        android:gravity="center|left"
                        android:hint="password"
                        android:inputType="textNoSuggestions"
                        android:lines="1"
                        android:paddingBottom="@dimen/ten_dip"
                        android:paddingRight="@dimen/fourty_dip"
                        android:paddingTop="2.0dip"
                        android:textColor="#ff757575"
                        android:textSize="@dimen/fourteen_sp"
                        />
               </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/show_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5.0dip"
                    android:paddingLeft="@dimen/twelve_dip"
                    android:paddingTop="2.0dip"
                    android:text="show"
                    android:textColor="#ff2196f3"
                    android:textSize="@dimen/thirteen_sp" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dip"
                android:textColorHint="@color/lableColor"
                >

                <EditText
                    android:id="@+id/mobile_field"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:gravity="center|left"
                    android:hint="mobile"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="10"
                    android:paddingBottom="@dimen/ten_dip"
                    android:paddingTop="2.0dip"
                    android:textColor="#ff757575"
                    android:textSize="@dimen/fourteen_sp"
                    />
          </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_city"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:textColorHint="@color/lableColor"
                    >

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dip"
                        android:drawableRight="@drawable/textdropdown_arrow"
                        android:editable="false"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="city"
                        android:imeOptions="actionNext"
                        android:paddingBottom="@dimen/ten_dip"
                        android:paddingTop="2.0dip"
                        android:singleLine="true"
                        android:textColor="#ff757575"
                        android:textSize="@dimen/fourteen_sp"
                        />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_fun_area"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:textColorHint="@color/lableColor"
                    >

                    <EditText
                        android:id="@+id/fun_area"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dip"
                        android:drawableRight="@drawable/textdropdown_arrow"
                        android:editable="false"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="locality"
                        android:imeOptions="actionNext"
                        android:paddingBottom="@dimen/ten_dip"
                        android:paddingTop="2.0dip"
                        android:singleLine="true"
                        android:textColor="#ff757575"
                        android:textSize="@dimen/fourteen_sp"
                        />
             </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_industry"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/five_dip"
                    android:textColorHint="@color/lableColor">

                    <EditText
                        android:id="@+id/industry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dip"
                        android:drawableRight="@drawable/textdropdown_arrow"
                        android:editable="false"
                        android:ellipsize="end"
                        android:gravity="center|left"
                        android:hint="Intrested Industry"
                        android:imeOptions="actionNext"
                        android:paddingBottom="@dimen/ten_dip"
                        android:paddingTop="2.0dip"
                        android:singleLine="true"
                        android:textColor="#ff757575"
                        android:textSize="@dimen/fourteen_sp"
                         />
               </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_exp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/five_dip"
                        android:textColorHint="@color/lableColor">

                        <EditText
                            android:id="@+id/total_exp"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/five_dip"
                            android:ellipsize="end"
                            android:gravity="center|left"
                            android:hint="Experience"
                            android:imeOptions="actionNext"
                            android:inputType="number"
                            android:maxLength="2"
                            android:paddingBottom="@dimen/ten_dip"
                            android:paddingTop="2.0dip"
                            android:singleLine="true"
                            android:textColor="#ff757575"
                            android:textSize="@dimen/fourteen_sp"
                      />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/alert_check_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_dip"
                android:layout_marginTop="@dimen/ten_dip"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/alert_check"
                    android:layout_width="wrap_content"
                    android:layout_height="16.0dip"
                    android:clickable="false"
                    android:scaleType="fitXY" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/five_dip"
                    android:shadowColor="#ffffffff"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="0.5"
                    android:text="Terms conditions"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/thirteen_sp" />
            </LinearLayout>

             <LinearLayout
                android:id="@+id/submit_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dip"
                android:background="@drawable/button_yellow"
                android:gravity="center"
                android:paddingBottom="@dimen/twelve_dip"
                android:paddingTop="@dimen/twelve_dip">

                <TextView
                    android:id="@+id/submit_btn_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:shadowColor="#ff20343c"
                    android:shadowDx="1.0"
                    android:shadowDy="1.0"
                    android:shadowRadius="0.0"
                    android:singleLine="true"
                    android:text="Register"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sixteen_sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/btn_submit_margin_top"
                android:layout_marginTop="@dimen/fifteen_dip"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/btn_submitpadding_top_btm"
                android:paddingTop="@dimen/btn_submitpadding_top_btm">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By registering, you agree to our "
                    android:textColor="#ff999999"
                    android:textSize="@dimen/ten_sp" />

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2.0dip"
                    android:text="Terms and conditions"
                    android:textColor="#ff2196f3"
                    android:textSize="@dimen/ten_sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>