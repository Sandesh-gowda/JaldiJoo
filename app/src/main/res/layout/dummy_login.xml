<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:paddingTop="@dimen/ten_dip">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="@dimen/ten_dip">

        <LinearLayout
            android:id="@+id/link_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/linkedin_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:background="#ff0177b5"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip"
                android:paddingRight="30.0dip"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/ic_linkedin_white" />

                <TextView
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="0.0"
                    android:background="#ff3caae1" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="10.0dip"
                    android:text="Login with Linkedin   "
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10.0dip"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.45"
                    android:background="#ffd3d3d3"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.1"
                    android:gravity="center_horizontal"
                    android:text="or"
                    android:textColor="#ff757575" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.45"
                    android:background="#ffd3d3d3"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/lableColor"
           >

            <EditText
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingBottom="@dimen/ten_dip"
                android:paddingTop="@dimen/five_dip"
                android:textColor="#ff757575"
                android:textSize="@dimen/fourteen_sp" />
</android.support.design.widget.TextInputLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout


                android:id="@+id/input_layout_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten_dip"
                android:textColorHint="@color/lableColor"
                >
                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:hint="Password"
                    android:imeOptions="actionGo"
                    android:inputType="textNoSuggestions"
                    android:lines="1"
                    android:paddingBottom="@dimen/ten_dip"
                    android:paddingRight="@dimen/fourty_dip"
                    android:textColor="#0000"
                    android:textSize="@dimen/fourteen_sp"
                    />
           </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/five_dip"
                android:padding="@dimen/twenty_dip"
                android:text="show"
                android:textColor="#ff2196f3"
                android:textSize="@dimen/twelve_sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/terms_check_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/five_dip"
            android:layout_marginTop="@dimen/ten_dip"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/terms_check"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/twenty_dip"
                android:clickable="false"
                android:scaleType="fitXY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/seven_dip"
                android:text="I agree to"
                android:textColor="#ff898989"
                android:textSize="@dimen/twelve_sp" />

            <TextView
                android:id="@+id/terms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2.0dip"
                android:text="Terms and condition"
                android:textColor="#ff2196f3"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dip"
            android:background="@drawable/button_yellow"
            android:gravity="center"
            android:paddingBottom="@dimen/twelve_dip"
            android:paddingTop="@dimen/twelve_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="sign in"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgot_pass_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/fifteen_dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/three_dip"
                android:text="Forgot password"
                android:textColor="#ff2196f3"
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/social_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20.0dip"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.45"
                    android:background="#ff999999" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center_horizontal"
                    android:text="or"
                    android:textColor="#ff999999" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="1.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.45"
                    android:background="#ff999999" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="Apply without registration" />

            <LinearLayout
                android:id="@+id/linkedin_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:background="#ff0177b5"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip"
                android:paddingRight="30.0dip"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/ic_linkedin_white" />

                <TextView
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="0.0"
                    android:alpha="0.5"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="10.0dip"
                    android:text="Apply through Linkedin   "
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/facebook_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:background="#ff3c5899"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip"
                android:paddingRight="30.0dip"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/ic_facebook_white" />

                <TextView
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="0.0"
                    android:alpha="0.5"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="10.0dip"
                    android:text="Apply through Facebook "
                    android:textColor="#eae5e5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10.0dip"
                android:background="#ffff9100"
                android:orientation="horizontal"
                android:paddingLeft="20.0dip"
                android:paddingRight="30.0dip"
                android:weightSum="1.0">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/ic_mobile_white" />

                <TextView
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginTop="5.0dip"
                    android:layout_weight="0.0"
                    android:alpha="0.5"
                    android:background="#ffffffff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:paddingBottom="10.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingTop="10.0dip"
                    android:text="Apply through Mobile       "
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/twenty_dip"
            android:layout_weight="1.0"
            android:gravity="bottom"
            android:paddingBottom="10.0dip"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="@dimen/twelve_sp" />
    </LinearLayout>
</ScrollView>